<?xml version='1.0' encoding='utf-8'?>
<interface version="1.3">
  <object class="tk.Toplevel" id="root" named="True">
    <property name="height">200</property>
    <property name="takefocus">true</property>
    <property name="title" translatable="yes">Hello</property>
    <property name="width">200</property>
    <child>
      <object class="ttk.Frame" id="main_frame" named="True">
        <property name="height">200</property>
        <property name="width">200</property>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="row">0</property>
        </layout>
        <child>
          <object class="ttk.Label" id="lbl_question" named="True">
            <property name="justify">left</property>
            <property name="relief">flat</property>
            <property name="state">normal</property>
            <property name="style">secondary.TLabel</property>
            <property name="takefocus">false</property>
            <property name="text" translatable="yes">What is my favorite programing language?</property>
            <layout manager="grid">
              <property name="column">0</property>
              <property name="padx">2</property>
              <property name="pady">4</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="ttk.Entry" id="ent_answer" named="True">
            <layout manager="grid">
              <property name="column">0</property>
              <property name="padx">2</property>
              <property name="pady">5</property>
              <property name="row">1</property>
              <property name="sticky">ew</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="ttk.Button" id="btn_submit" named="True">
            <property name="style">primary.TButton</property>
            <property name="text" translatable="yes">Submit</property>
            <layout manager="grid">
              <property name="column">0</property>
              <property name="pady">10 2</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
